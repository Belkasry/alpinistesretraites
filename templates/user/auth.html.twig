{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}

    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
    <div class="login-form" >
        <form action="{{ path("login_user") }}" method="post">
            <div class="d-flex justify-content-center mb-4"><img style="margin:auto;"
                                                                 src="{{ asset('img/alpinistesretraites.ico.png') }}"
                                                                 width="100px"/></div>
            {% if hasError %}
                <div class="alert alert-danger alert-dismissible mb-3">
                   {{ error }}
                </div>
            {% endif %}
            <div class="form-group">
                <input type="text" name="_username" id="username"  class="form-control" value="{{ lastUsername }}"  placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
            </div>
            <div class="clearfix">
                <a href="#" class="float-right text-info">Password oublié?</a>
            </div>


        </form>
        <p class="text-center"><a href="{{ path("nouveau_guide") }}">Créer un compte</a></p>
    </div>
{% endblock %}
